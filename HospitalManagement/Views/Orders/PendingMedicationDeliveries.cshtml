@model IEnumerable<HospitalManagement.Models.MedicationOrder>

@{
    ViewData["Title"] = "Pending Medication Deliveries";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";

    string getStatusClass(HospitalManagement.Models.OrderStatus status) =>
        status switch
        {
            HospitalManagement.Models.OrderStatus.OnTheWay => "status-warning",
            HospitalManagement.Models.OrderStatus.Collected => "status-success",
            HospitalManagement.Models.OrderStatus.Packaged => "status-default",
            _ => "status-default"
        };
}

<style>
        .order-card-col {
        flex: 0 0 auto;
        max-width: 400px;
        margin-right: 1rem;
    }

    .card-receipt {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.07);
        background-color: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 1rem;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-header {
        border-bottom: 1px solid #eee;
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-number {
        font-weight: 700;
        font-size: 1.25rem;
        color: #2c3e50;
    }

    .order-status {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .status-default {
        color: #2980b9;
    }

    .status-warning {
        color: #d39e00;
    }

    .status-success {
        color: #198754;
    }

    .pharmacist-name,
    .box-count {
        font-size: 0.9rem;
        color: #34495e;
        margin-bottom: 0.4rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .icon-pharmacist {
        color: #3498db;
    }

    .icon-box {
        color: #A0522D;
    }

    .icon-pills {
        color: #27ae60;
    }

    .order-items-list {
        flex-grow: 1;
        margin-top: 0.5rem;
        padding-top: 0.5rem;
        border-top: 1px solid #eee;
        overflow-y: auto;
        max-height: 180px;
    }

    .order-item {
        font-size: 0.9rem;
        padding: 0.25rem 0;
        border-bottom: 1px solid #f5f5f5;
        display: flex;
        justify-content: space-between;
        color: #555;
        align-items: center;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .order-item span:first-child {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-footer {
        padding-top: 1rem;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: flex-end;
        gap: 0.4rem;
    }

    .btn-small {
        padding: 0.3rem 0.6rem;
        font-size: 0.85rem;
        border-radius: 6px;
    }
</style>

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#48AAAD;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white d-inline-flex align-items-center back-link me-3" style="text-decoration:none;">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white"><strong>Pending Medication Deliveries</strong></h2>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div id="tempDataMessage" class="alert @(TempData["Message"].ToString().Contains("successfully") ? "alert-success" : "alert-danger")" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No pending medication deliveries found.</div>
    }
    else
    {
        <div class="d-flex flex-column flex-lg-row flex-lg-nowrap overflow-auto pb-3">
            @foreach (var order in Model)
            {
                var boxCount = order.OrderItems?.Sum(oi => oi.Quantity) ?? 0;
                 <div class="order-card-col col-12 col-md-12 col-lg-4" data-order-id="@order.OrderId">
                    <div class="card card-receipt">
                        <div class="card-header">
                            <div class="order-number">@order.OrderNumber</div>
                            <div class="order-status @getStatusClass(order.Status)" id="order-status-@order.OrderId">@order.Status.ToString()</div>
                        </div>
                        <div class="pharmacist-name">
                            <i class="fas fa-user-md icon-pharmacist"></i>
                            Pharmacist: @(order.Pharmacist?.FirstName ?? order.PharmacistId)
                        </div>
                        <div class="box-count">
                            <i class="fas fa-box icon-box"></i>
                            Box Count: @boxCount
                        </div>
                        <div class="order-items-list mt-2">
                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                foreach (var item in order.OrderItems)
                                {
                                    <div class="order-item">
                                        <span><i class="fas fa-pills icon-pills"></i> @item.MedicationStock?.Medication?.MedicationName</span>
                                        <span>@item.Quantity</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-muted">No items found.</div>
                            }
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary btn-small btn-deliver" data-order-id="@order.OrderId" style="@(order.Status == HospitalManagement.Models.OrderStatus.Packaged ? "" : "display:none;")">
                                Deliver Order
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
<script>
    $(function() {
        var token = $('input[name="__RequestVerificationToken"]').val();

        setTimeout(function () {
            $("#tempDataMessage").fadeOut();
        }, 7000);

        function updateStatus(orderId, newStatus) {
            var statusDiv = $('#order-status-' + orderId);
            statusDiv.text(newStatus);
            statusDiv.removeClass('status-default status-warning status-success');
            if(newStatus === 'OnTheWay') {
                statusDiv.addClass('status-warning');
            } else if(newStatus === 'Collected') {
                statusDiv.addClass('status-success');
            } else if(newStatus === 'Packaged') {
                statusDiv.addClass('status-default');
            } else {
                statusDiv.addClass('status-default');
            }
        }

        $('.btn-deliver').on('click', function () {
            var btn = $(this);
            var orderId = btn.data('order-id');
            btn.prop('disabled', true);
            $.ajax({
                url: '@Url.Action("DeliverOrder", "Orders")',
                type: 'POST',
                data: { orderId: orderId },
                headers: { 'RequestVerificationToken': token },
                success: function () {
                    updateStatus(orderId, 'OnTheWay');
                    btn.hide();
                    btn.closest('.card-footer').find('.btn-complete-delivery').show().prop('disabled', false);
                },
                error: function () {
                    alert('Failed to update status to OnTheWay. Please try again.');
                    btn.prop('disabled', false);
                }
            });
        });

        $('.btn-complete-delivery').on('click', function () {
            var btn = $(this);
            var orderId = btn.data('order-id');
            btn.prop('disabled', true);
            $.ajax({
                url: '@Url.Action("CompleteOrder", "Orders")',
                type: 'POST',
                data: { orderId: orderId },
                headers: { 'RequestVerificationToken': token },
                success: function () {
                    updateStatus(orderId, 'Collected');
                    btn.hide();
                },
                error: function () {
                    alert('Failed to update status to Collected. Please try again.');
                    btn.prop('disabled', false);
                }
            });
        });
    });
</script>
}
