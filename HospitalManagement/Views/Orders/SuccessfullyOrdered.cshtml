@{
    ViewData["Title"] = "Successfully Ordered";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var complainId = ViewData["ComplainId"] ?? 0;
}
<style>
    .center-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 60vh;
        text-align: center;
        color: #007bff; 
    }
    .check-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #48AAAD;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 25px;
        box-shadow: 0 0 15px rgba(72, 170, 173, 0.7);
        animation: pulse 1.5s infinite;
        position: relative;
    }
    .success-message {
        font-size: 1.5rem;
        font-weight: 600;
        color: #48AAAD;
    }

</style>

<div class="center-container" role="alert" aria-live="assertive">
    <div class="check-circle" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg"
             width="70" height="70" fill="white" class="bi bi-box-seam" viewBox="0 0 16 16" aria-label="Package icon">
            <path d="M8.54.146a.5.5 0 0 0-.53 0L1.882 3.97a.5.5 0 0 0-.277.447V12.95a.5.5 0 0 0 .277.447l5.738 3.823a.5.5 0 0 0 .53 0l6.127-4.086a.5.5 0 0 0 .21-.406V3.973a.5.5 0 0 0-.21-.406L8.54.146zM2.561 4.843 7.5 2.209v11.569L2.561 4.843zm7.878 9.935-5-3.335V2.211l5 3.334v9.233z"/>
            <path d="M7.5 1.44 14 5.115v5.77L7.5 14.56V1.44z"/>
        </svg>
    </div>
    <div class="success-message">
        Your order has been successfully placed. We are processing it now.
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var circle = document.querySelector('.check-circle svg');
            if (circle) {
                circle.style.opacity = 0;
                setTimeout(function () {
                    circle.style.transition = "opacity 0.5s ease";
                    circle.style.opacity = 1;
                }, 300);
            }
            setTimeout(function () {
                window.location.href = '@Url.Action("MedicationOrders", "Orders")';
            }, 5000);
        });
    </script>
}
