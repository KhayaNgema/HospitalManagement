<script>

    $(document).ready(function () {
        if (!getCookie('cookieConsent')) {
            $('.cookie-banner').show();
            $('.overlay').show();
            $('body').addClass('disable-interactions');
        }

        $('#accept-cookies').click(function () {
            saveCookiePreferences(true);
        });

        $('#reject-cookies').click(function () {
            saveCookiePreferences(false);
        });

        function saveCookiePreferences(isAccepted) {
            document.cookie = "cookieConsent=" + isAccepted + "; path=/; max-age=" + (60 * 60 * 24 * 365) + ";";
            localStorage.setItem('cookieConsent', isAccepted ? 'true' : 'false');

            $.ajax({
                url: '/CookiePreferences/SavePreferences',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    PerformanceCookies: isAccepted,
                    FunctionalityCookies: isAccepted,
                    TargetingCookies: isAccepted
                }),
                success: function (response) {
                    if (response.success) {
                        $('.cookie-banner').hide();
                        $('.overlay').hide();
                        $('body').removeClass('disable-interactions');
                    } else {
                        console.error('Error saving preferences');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }
    });

    $(document).ready(function () {

        $(document).on('click', '.action-button', function () {
            var id = $(this).data('id');
