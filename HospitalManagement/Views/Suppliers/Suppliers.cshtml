@model IEnumerable<HospitalManagement.Models.Supplier>
@inject HospitalManagement.Interfaces.IEncryptionService encryptionService

@{
    ViewData["Title"] = "Suppliers";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#48AAAD;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-inline-flex align-items-center back-link me-3">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white">Suppliers</h2>
        </div>
    </div>

 
    <div class="d-flex justify-content-between align-items-center mb-4 px-3">
        <div class="input-group w-50">
            <input type="text" class="form-control" placeholder="Search by name, occupation, license..." id="qrSearchInput">
        </div>
        <div>
            <a asp-controller="Suppliers" asp-action="NewSupplier" class="btn btn-primary" id="addButton">
                <i class="bi bi-plus-circle me-1"></i> New Supplier
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No suppliers found.
        </div>
    }
    else
    {
        @if (TempData["Message"] != null)
        {
            <div id="tempDataMessage" class="alert @(TempData["Message"].ToString().Contains("successfully") ? "alert-success" : "alert-danger")" role="alert">
                @TempData["Message"]
                <span class="close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </span>
            </div>
        }


        <div class="table-responsive">
            <table class="table table-striped table-borderless" id="appointmentsTable">
                <thead class="custom-thead">
                    <tr style="color:white;background-color: #324260; white-space: nowrap;">
                        <th>Supplier</th>
                        <th>Address</th>
                        <th>Created By</th>
                        <th>Created Date</th>
                        <th>Modified By</th>
                        <th>Modified Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DistinctBy(supplier => supplier.SupplierId))
                    {
                        var encryptedId = encryptionService.Encrypt(item.SupplierId);

                        <tr>
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <img src="~/@item.SupplierBadge" alt="Logo"
                                         class="img-thumbnail img-fluid" style="max-width: 100px; max-height: 100px;" />
                                    <span>@item.SupplierName</span>
                                </div>
                            </td>
                            <td>@item.Address</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedDateTime.ToString("dd/MM/yyyy")</td>
                            <td>@item.ModifiedBy</td>
                            <td>@item.ModifiedDateTime.ToString("dd/MM/yyyy")</td>

                            @if (User.IsInRole("System Administrator"))
                            {
                                <td class="text-end">
                                    <button class="btn btn-primary btn-sm action-button" type="button"
                                            data-supplier-id="@item.SupplierId"
                                            data-admin-url="@Url.Action("SupplierAdministrators", "Suppliers", new { supplierId = encryptedId })"
                                            data-drivers-url="@Url.Action("SupplierDrivers", "Suppliers", new { supplierId = encryptedId })"
                                            data-details-url="@Url.Action("Details", "Suppliers", new { supplierId = encryptedId })"
                                            data-update-url="@Url.Action("Update", "Suppliers", new { supplierId = encryptedId })"
                                            data-delete-url="@Url.Action("DeleteSupplier", "Suppliers", new { supplierId = encryptedId })">
                                        Actions
                                    </button>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div id="floatingActionTab" class="card shadow" style="
    display: none;
    position: absolute;
    z-index: 9999;
    min-width: 180px;
    background: white;
    border: 1px solid #ccc;
    border-radius: 5px;
    overflow: hidden;
">
    <div class="list-group list-group-flush">
        <a href="#" id="adminLink" class="list-group-item list-group-item-action">
            <i class="fas fa-users-cog text-primary"></i> Administrators
        </a>
        <a href="#" id="driversLink" class="list-group-item list-group-item-action">
            <i class="fas fa-truck text-success"></i> Drivers
        </a>
        <a href="#" id="detailsLink" class="list-group-item list-group-item-action">
            <i class="fas fa-info-circle text-secondary"></i> Details
        </a>
        <a href="#" id="updateLink" class="list-group-item list-group-item-action">
            <i class="fas fa-edit text-warning"></i> Update
        </a>
        <a href="#" id="deleteLink" class="list-group-item list-group-item-action text-danger"
           onclick="return confirm('Are you sure you want to remove this supplier?');">
            <i class="fas fa-trash-alt"></i> Remove
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#tempDataMessage").fadeOut();
            }, 7000);

            $(document).on("click", ".action-button", function (e) {
                e.stopPropagation();

                const button = $(this);
                const offset = button.offset();
                const tab = $("#floatingActionTab");

                $("#adminLink").attr("href", button.data("admin-url"));
                $("#driversLink").attr("href", button.data("drivers-url"));
                $("#detailsLink").attr("href", button.data("details-url"));
                $("#updateLink").attr("href", button.data("update-url"));
                $("#deleteLink").attr("href", button.data("delete-url"));

                const left = Math.min($(window).width() - tab.outerWidth() - 10, offset.left + button.outerWidth() + 10);
                const top = offset.top - $(window).scrollTop() + button.outerHeight() + 5;

                tab.css({
                    top: top + "px",
                    left: left + "px"
                }).fadeIn();
            });

            $(document).on("click", function (e) {
                if (!$(e.target).closest("#floatingActionTab").length && !$(e.target).hasClass("action-button")) {
                    $("#floatingActionTab").fadeOut();
                }
            });

            $('#qrSearchInput').on('input', function () {
                var value = $(this).val().toLowerCase();
                $('#appointmentsTable tbody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
