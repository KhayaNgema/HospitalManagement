@model HospitalManagement.ViewModels.MedicationRemindersWithDeliveryViewModel
@inject HospitalManagement.Interfaces.IEncryptionService encryptionService

@{
    ViewData["Title"] = "Medication Reminders";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#48AAAD;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-inline-flex align-items-center back-link me-3">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white">Reminders</h2>
        </div>
    </div>

    @if (!Model.Reminders.Any())
    {
        <div class="alert alert-info text-center">You have no active medication reminders.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var reminder in Model.Reminders)
            {
                var encryptedPrescriptionId = encryptionService.Encrypt(reminder.MedicationPescriptionId);
                var modalId = "deliveryModal_" + reminder.MedicationPescriptionId;

                var delivery = Model.DeliveryRequests != null && Model.DeliveryRequests.ContainsKey(reminder.MedicationPescriptionId)
                    ? Model.DeliveryRequests[reminder.MedicationPescriptionId]
                    : new HospitalManagement.ViewModels.NewDeliveryRequestViewModel();

                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex flex-wrap flex-md-nowrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center mb-2 mb-md-0">
                                <i class="bi bi-calendar-event text-primary me-2 fs-4"></i>
                                <div class="fw-semibold me-4">@reminder.ExpiryDate.ToString("yyyy-MM-dd")</div>
                                <div class="fw-bold text-dark fs-6">Medication Collection Reminder</div>
                            </div>

                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#@modalId">
                                    Request Delivery
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalId + "_label"" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-md">
                            <div class="modal-content rounded-4">
                                <div class="modal-header modal-header-custom">
                                    <h5 class="modal-title" id="@modalId + "_label"">Delivery Request Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <form asp-controller="Deliveries" asp-action="NewDeliveryRequest" method="post" class="px-4 py-3">
                                    <input type="hidden" name="PescriptionId" value="@reminder.MedicationPescriptionId" />

                                    <div class="modal-body">
                                        <div class="row g-3">
                                      <p>
                                            NOTE: If you are no longer at the address below, please update it and provide the one you are currently using.
                                        </p>
                                            <div class="col-md-6">
                                                <label class="form-label">Street</label>
                                                <input type="text" class="form-control" name="Street" value="@delivery.Street" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">City</label>
                                                <input type="text" class="form-control" name="City" value="@delivery.City" required />
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Province</label>
                                                <select class="form-select" name="Province" required>
                                                    @foreach (var prov in Enum.GetValues(typeof(HospitalManagement.Models.Province)))
                                                    {
                                                        <option value="@prov" selected="@(prov.Equals(delivery.Province) ? "selected" : null)">
                                                            @prov
                                                        </option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Postal Code</label>
                                                <input type="text" class="form-control" name="PostalCode" value="@delivery.PostalCode" required />
                                            </div>
                                            <div class="col-md-12">
                                                <label class="form-label">Country</label>
                                                <input type="text" class="form-control" name="Country" value="@delivery.Country" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" id="addButton" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    }

    <div class="mt-4 text-center">
        <a href="@Url.Action("CollectMedication", "Medication")" class="btn btn-secondary">← Back to Collection Page</a>
    </div>
</div>
