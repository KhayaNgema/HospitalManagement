@using HospitalManagement.Models
@model Room

@{
    ViewData["Title"] = "New Room";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<head>
    <style>
        .btn-login {
            background-color: #48AAAD;
            color: white;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.7rem;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #369a9a;
                box-shadow: 0 4px 15px rgba(72, 170, 173, 0.4);
            }

        .camera-icon {
            position: absolute;
            bottom: 10px;
            right: 10px;
            cursor: pointer;
            background-color: white;
            border-radius: 50%;
            padding: 5px;
        }
    </style>
</head>

<div class="container-fluid my-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="login-card shadow p-4">
                <h3 class="login-header text-center mb-4">New Patient Admission Room</h3>

                <form asp-action="NewRoom" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <select asp-for="Department" id="Department" class="form-select rounded-3"
                            asp-items="Html.GetEnumSelectList<Department>()">
                        <option value="">-- Select Department --</option>
                    </select>

                    <div class="mb-4">
                        <label asp-for="RoomNumber"></label>
                        <input asp-for="RoomNumber" class="form-control" />
                        <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NoOfBeds"></label>
                        <input asp-for="NoOfBeds" class="form-control" rows="4">
                        <span asp-validation-for="NoOfBeds" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-login">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>