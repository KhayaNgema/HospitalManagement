@model IEnumerable<HospitalManagement.Models.DeliveryRequest>
@inject HospitalManagement.Interfaces.IEncryptionService encryptionService

@{
    ViewData["Title"] = "Medication Delivery Requests";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#48AAAD;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-inline-flex align-items-center back-link me-3">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white">Medication Delivery Requests</h2>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 px-3">
        <div class="input-group w-50">
            <input type="text" class="form-control" placeholder="Search by patient, address, status..." id="qrSearchInput" />
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No delivery requests found.
        </div>
    }
    else
    {
        @if (TempData["Message"] != null)
        {
            <div id="tempDataMessage" class="alert @(TempData["Message"].ToString().Contains("successfully") ? "alert-success" : "alert-danger")" role="alert">
                @TempData["Message"]
                <span class="close" aria-label="Close" style="cursor:pointer;">
                    <span aria-hidden="true">&times;</span>
                </span>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-borderless" id="requestsTable">
                <thead class="custom-thead">
                    <tr style="color:white; background-color: #324260; white-space: nowrap;">
                        <th>Patient</th>
                        <th>Address</th>
                        <th>Created At</th>
                        <th>Last Updated</th>
                        <th>Modified By</th>
                        <th>Status</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var encryptedId = encryptionService.Encrypt(item.DeliveryRequestId);
                        <tr>
                            <td>@(item.Patient != null ? $"{item.Patient.FirstName} {item.Patient.LastName}" : "N/A")</td>
                            <td>@item.Address</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@item.LastUpdatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@(item.ModifiedBy != null ? $"{item.ModifiedBy.FirstName} {item.ModifiedBy.LastName}" : "N/A")</td>
                            <td>@item.Status.ToString()</td>
                            <td class="text-end">
                                <button class="btn btn-primary btn-sm action-button" type="button"
                                        data-request-id="@encryptedId"
                                        data-package-url="@Url.Action("PackageMedication", "Deliveries", new { requestId = encryptedId })">
                                    Actions
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div id="floatingActionTab" class="card shadow" style="
    display: none;
    position: absolute;
    z-index: 9999;
    min-width: 180px;
    background: white;
    border: 1px solid #ccc;
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
">
    <div class="list-group list-group-flush">
        <a href="#" id="packageMedicationLink" class="list-group-item list-group-item-action">
            <i class="fas fa-truck-loading text-primary me-2"></i> Package Medication
        </a>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#tempDataMessage").fadeOut();
        }, 7000);

        $(document).on("click", "#tempDataMessage .close", function () {
            $("#tempDataMessage").fadeOut();
        });

        $(document).on("click", ".action-button", function (e) {
            e.stopPropagation();

            const button = $(this)[0];
            const tab = $("#floatingActionTab");

            $("#packageMedicationLink").attr("href", $(this).data("package-url"));

            const rect = button.getBoundingClientRect();
            const tabWidth = tab.outerWidth();
            const tabHeight = tab.outerHeight();

            const offsetX = 10;
            const offsetY = 8;

            let left = rect.right + offsetX;
            let top = rect.top + offsetY;

            if (left + tabWidth > window.innerWidth) {
                left = rect.left - tabWidth - offsetX;
            }
            if (top + tabHeight > window.innerHeight) {
                top = window.innerHeight - tabHeight - offsetY;
                if (top < 0) top = 0;
            }

            tab.css({
                position: "fixed",
                left: left + "px",
                top: top + "px"
            }).fadeIn();
        });

        $(document).on("click", function (e) {
            if (!$(e.target).closest("#floatingActionTab").length && !$(e.target).hasClass("action-button")) {
                $("#floatingActionTab").fadeOut();
            }
        });

        $('#qrSearchInput').on('input', function () {
            var value = $(this).val().toLowerCase();
            $('#requestsTable tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
}
