@model IEnumerable<HospitalManagement.Models.Package>
@inject HospitalManagement.Interfaces.IEncryptionService encryptionService

@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#48AAAD;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-inline-flex align-items-center back-link me-3">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white">Packages</h2>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 px-3">
        <div class="input-group w-50">
            <span class="input-group-text" id="openScanner" role="button" style="cursor:pointer; background-color:#48AAAD">
                <i class="bi bi-camera" style="font-size: 1.4rem; color:white;"></i>
            </span>
            <input type="text" class="form-control" placeholder="Scan or enter Package Number..." id="qrSearchInput">
        </div>
        <div id="qr-reader-wrapper" class="mt-4" style="display:none;">
            <div id="qr-reader" style="width: 100%;"></div>
            <div class="scanner-line"></div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No packages found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-borderless" id="packagesTable">
                <thead class="custom-thead">
                    <tr>
                        <th class="text-nowrap"><i class="fas fa-hashtag me-1"></i> Package Number</th>
                        <th class="text-nowrap"><i class="fas fa-user me-1"></i> Packaged By</th>
                        <th class="text-nowrap"><i class="fas fa-calendar-alt me-1"></i> Collection Date</th>
                        <th class="text-nowrap"><i class="fas fa-user me-1"></i> Delivery Personnel</th>
                        <th class="text-nowrap"><i class="fas fa-info-circle me-1"></i> Status</th>
                        <th class="text-nowrap"><i class="fas fa-qrcode me-1"></i> QR Code</th>
                        @if (User.IsInRole("System Administrator"))
                        {
                            <th class="text-nowrap"><i class="fas fa-user-shield me-1"></i> Created By</th>
                            <th class="text-nowrap"><i class="fas fa-calendar-plus me-1"></i> Created At</th>
                            <th class="text-nowrap"><i class="fas fa-user-edit me-1"></i> Updated By</th>
                            <th class="text-nowrap"><i class="fas fa-calendar-check me-1"></i> Last Updated At</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var package in Model)
                    {
                        var encryptedPackageId = encryptionService.Encrypt(package.PackageId);

                        <tr class="clickable-row ellipsis" data-id="@encryptedPackageId" style="cursor: pointer;">
                            <td>@package.PackageNumber</td>
                            <td>@package.CreatedBy?.FirstName @package.CreatedBy?.LastName</td>
                            <td>@package.DeliveryRequest.MedicationPescription.NextCollectionDate?.ToString("yyyy/MM/dd")</td>
                            <td>@package.DeliveryPersonnel?.FirstName @package.DeliveryPersonnel?.LastName</td>
                            <td>@package.DeliveryRequest?.Status</td>
                            <td>
                                @if (package.QrCodeImage != null)
                                {
                                    var base64 = Convert.ToBase64String(package.QrCodeImage);
                                    var imgSrc = $"data:image/png;base64,{base64}";
                                    <img src="@imgSrc" alt="QR Code" style="width:100px; height:100px;" />
                                }
                            </td>
                            @if (User.IsInRole("System Administrator"))
                            {
                                <td>@package.CreatedBy?.FirstName @package.CreatedBy?.LastName</td>
                                <td>@package.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@package.ModifiedBy?.FirstName @package.ModifiedBy?.LastName</td>
                                <td>@package.LastUpdatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noResultsMessage" class="alert alert-info text-center" style="display:none;">
                No packages found.
            </div>
        </div>
    }
</div>

<script src="https://unpkg.com/html5-qrcode"></script>
<script>
    const qrInput = document.getElementById("qrSearchInput");
    const qrReaderWrapper = document.getElementById("qr-reader-wrapper");
    const qrReader = document.getElementById("qr-reader");
    const openScanner = document.getElementById("openScanner");

    let currentSearchQuery = "";

    function filterPackages() {
        const rows = document.querySelectorAll("#packagesTable tbody tr");
        let anyVisible = false;

        rows.forEach(row => {
            const packageNumber = row.querySelector("td:first-child").textContent.toLowerCase();
            const searchMatches = packageNumber.includes(currentSearchQuery);

            if (searchMatches) {
                row.style.display = "";
                anyVisible = true;
            } else {
                row.style.display = "none";
            }
        });

        document.getElementById("noResultsMessage").style.display = anyVisible ? "none" : "block";
    }

    function setupSearchInput() {
        qrInput.addEventListener("keyup", function () {
            currentSearchQuery = this.value.trim().toLowerCase();
            filterPackages();
        });
    }

    openScanner.addEventListener("click", () => {
        qrReaderWrapper.style.display = "block";
        qrReaderWrapper.classList.add("active");

        const html5QrCode = new Html5Qrcode("qr-reader");

        Html5Qrcode.getCameras().then(devices => {
            if (devices && devices.length) {
                const cameraId = devices[0].id;
                html5QrCode.start(
                    cameraId,
                    { fps: 10, qrbox: { width: 180, height: 180 } },
                    qrCodeMessage => {
                        qrInput.value = qrCodeMessage;
                        qrInput.dispatchEvent(new Event("keyup"));

                        html5QrCode.stop().then(() => {
                            qrReaderWrapper.style.display = "none";
                            qrReaderWrapper.classList.remove("active");
                            qrReader.innerHTML = "";
                        }).catch(err => console.error("Stop error", err));
                    },
                    errorMessage => {
                    }
                ).catch(err => {
                    console.error("QR code scan error:", err);
                });
            }
        }).catch(err => {
            console.error("Camera access error:", err);
        });
    });

    function setupRowClicks() {
        document.querySelectorAll('#packagesTable .clickable-row').forEach(row => {
            row.addEventListener('click', function () {
                const encryptedPackageId = this.getAttribute('data-id');
                const url = '@Url.Action("PackageDetails", "Deliveries")'; 
                window.location.href = `${url}?packageId=${encodeURIComponent(encryptedPackageId)}`;
            });
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        setupSearchInput();
        filterPackages();
        setupRowClicks();
    });
</script>
