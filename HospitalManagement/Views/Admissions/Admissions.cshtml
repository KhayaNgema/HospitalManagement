@model IEnumerable<HospitalManagement.Models.Admission>

@{
    ViewData["Title"] = "Admissions";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}
<br />
<a asp-controller="Home" asp-action="Index" class="text-decoration-none d-inline-flex align-items-center back-link">
    <i class="bi bi-chevron-left me-1"></i> Back
</a>

<div class="container-fluid my-5 px-4">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" style="background-color:#48AAAD;">
        <h2 class="mb-0 text-white">Admissions</h2>
        <div>
            <button class="btn btn-light btn-sm me-2 filter-btn" data-filter="Admitted">
                <i class="bi bi-hospital-fill text-primary"></i> <span class="btn-text ms-1">Admitted</span>
            </button>
            <button class="btn btn-light btn-sm me-2 filter-btn" data-filter="Discharged">
                <i class="bi bi-door-open-fill" style="color:green;"></i> <span class="btn-text ms-1">Discharged</span>
            </button>
            <button class="btn btn-light btn-sm filter-btn" data-filter="Deceased">
                <i class="bi bi-person-x-fill" style="color:gray;"></i> <span class="btn-text ms-1">Deceased</span>
            </button>
        </div>
    </div>


    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No admissions found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-borderless">
                <thead style="background-color: #48AAAD; color: white;">
                    <tr style="background-color: #48AAAD; color: white;">
                        <th><i class="fas fa-user me-1"></i> Patient</th>
                        <th><i class="fas fa-calendar-plus me-1"></i> Admission Date</th>
                        <th><i class="fas fa-calendar-minus me-1"></i> Discharge Date</th>
                        <th><i class="fas fa-hospital me-1"></i> Ward</th>
                        <th><i class="fas fa-door-open me-1"></i> Room No.</th>
                        <th><i class="fas fa-bed me-1"></i> Bed No.</th>
                        <th><i class="fas fa-stethoscope me-1"></i> Department</th>
                        <th><i class="fas fa-info-circle me-1"></i> Status</th>
                        @if (User.IsInRole("System Administrator"))
                        {
                            <th><i class="fas fa-user-shield me-1"></i> Created By</th>
                            <th><i class="fas fa-calendar-plus me-1"></i> Created At</th>
                            <th><i class="fas fa-user-edit me-1"></i> Updated By</th>
                            <th><i class="fas fa-calendar-check me-1"></i> Last Updated At</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.CreatedBy.FirstName @booking.CreatedBy.LastName</td>
                            <td>@booking.AdmissionDate</td>
                            <td>@booking.DischargeDate</td>
                            <td>@booking.Ward</td>
                            <td>@booking.RoomNumber</td>
                            <td>@booking.BedNumber</td>
                            <td>@booking.Department</td>
                            <td>@booking.PatientStatus</td>
                            @if (User.IsInRole("System Administrator"))
                            {
                                <td>@booking.CreatedBy.FirstName @booking.CreatedBy.LastName</td>
                                <td>@booking.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@booking.ModifiedBy.FirstName @booking.ModifiedBy.LastName</td>
                                <td>@booking.LastUpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
