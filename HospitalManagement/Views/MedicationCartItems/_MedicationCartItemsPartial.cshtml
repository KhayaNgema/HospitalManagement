@model IEnumerable<HospitalManagement.Models.MedicationCartItem>

<style>
    /* Make table look like a receipt */
    #cartTable {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 14px;
        background: #fff;
        box-shadow: 0 0 8px rgba(0,0,0,0.1);
        border: 1px solid #ccc;
        padding: 10px;
    }

        /* Header styling */
        #cartTable thead th {
            border-bottom: 1px dashed #aaa;
            color: #333;
            font-weight: 600;
            padding: 8px;
            text-align: left;
        }

        /* Dotted lines for rows like receipt printout */
        #cartTable tbody tr {
            border-bottom: 1px dotted #999;
        }

        #cartTable td {
            padding: 6px 8px;
            vertical-align: middle;
            color: #333;
        }

        /* Subtotal and total emphasis */
        #cartTable .subtotal,
        #totalPrice {
            font-family: monospace;
            font-weight: bold;
            color: #000;
        }

        /* Total row */
        #cartTable tfoot td {
            border-top: 1px dashed #aaa;
            padding-top: 10px;
        }

    /* Input box */
    .quantity-input {
        width: 50px;
        padding: 4px;
        text-align: center;
        font-size: 14px;
    }

    /* Delete icon style */
    .delete-icon {
        color: red;
        background: none;
        border: none;
        font-size: 16px;
        cursor: pointer;
    }

    /* Button container styling */
    .button-container {
        text-align: center;
        margin-top: 20px;
    }

    #checkoutButton {
        background-color: #333;
        color: #fff;
        padding: 8px 20px;
        font-size: 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        #checkoutButton:hover {
            background-color: #555;
        }

    /* Empty cart center */
    .center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 40vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .no-items-message {
        margin-top: 10px;
        color: #666;
    }


    .cart-container {
        margin: 0 auto; /* Center the table if needed */
        padding: 0; /* Remove inner padding */
        max-width: 100%; /* Make sure it doesn't exceed full width */
    }

    #cartTable {
        width: 100%;
        margin: 0; /* Remove default margin */
    }
</style>


@if (Model != null && Model.Any())
{
    <div class="cart-container">
    <table class="table" id="cartTable">
        <thead>
            <tr>
                <th>Medication</th>
                <th>Qty</th>
                <th>Del.</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cartItem in Model)
            {
                <tr data-cartitemid="@cartItem.CartItemId">
<td>
    <div style="display: flex; align-items: center; gap: 8px;">
        <img src="~/@cartItem.MedicationStock?.Medication.MedicationImage" 
             alt="medi_photo" 
             class="img-thumbnail img-fluid" 
             style="max-width: 70px; max-height: 70px; flex-shrink: 0;" />
        <div style="min-width: 0;">
            <span style="white-space: nowrap;">
                @cartItem.MedicationStock?.Medication.MedicationName 
                (@cartItem.MedicationStock.Quantity)
            </span>
            <br />
            <span style="color: green;">
                @cartItem.MedicationStock?.Supplier.SupplierName
            </span>
        </div>
    </div>
</td>

                    <td>
                        <input type="number" class="quantity-input" value="@cartItem.Quantity" min="1" />
                    </td>
                    <td>
                        <button class="btn delete-cart-item" data-cartitemid="@cartItem.CartItemId">
                            <i class="fas fa-trash-alt delete-icon"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    <br />
    <div class="button-container btn-md">
        <a href="/Orders/NewMedicationOrder" class="btn" id="addButton">Order Now</a>
    </div>

    <br />
}
else
{
    <div class="center">
        <i class="fas fa-shopping-cart fa-4x" style="color: #ccc;"></i>
        <p class="no-items-message">You haven't added items in your basket.</p>
    </div>
}
