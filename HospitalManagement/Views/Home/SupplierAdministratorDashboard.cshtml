@{
    ViewData["Title"] = "Pharmacist";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #022D36;
        font-size: 20px;
    }

    .card-text {
        color: #022D36;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #022D36;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #48AAAD;
    }

    .styled-button {
        background-color: #ffffff;
        color: #022D36;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

    .styled-button span.arrow {
        margin-left: 10px;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />

<div style="display: flex; align-items: center;">
    <img src="~/@ViewBag.SupplierBadge" alt="logo" style="width: 60px; height: 60px; margin-right: 20px; object-fit: cover;" />
    <div style="display: flex; flex-direction: column; align-items: flex-start; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
        <h2 style="margin: 0;">@ViewBag.SupplierName</h2>
    </div>
</div>

<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card officials-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-clipboard-list text-primary me-2"></i> Medication Orders
                    </h5>
                    <p class="card-text">New medication orders from hospital are listed here.</p>
                    <a asp-controller="Orders" asp-action="MedicationOrders" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>View Orders</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card officials-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-bicycle text-success me-2"></i> Drivers
                    </h5>
                    <p class="card-text">View all drivers responsible for delivering packaged medication.</p>
                    <a asp-controller="Suppliers" asp-action="SupplierDrivers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>View Drivers</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
