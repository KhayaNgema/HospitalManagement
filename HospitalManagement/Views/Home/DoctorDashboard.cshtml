@{
    ViewData["Title"] = "System Administrator";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
    border: none;
    border-radius: 8px;
    margin-bottom: 20px;
    background: white;
    width: 100%;
    height: 30vh; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
    color: #022D36;
    font-size: 20px; 
    }

    .card-text {
    color: #022D36;
    }

    .btn-primary {
    background-color: #B0E0FC;
    color: #022D36;
    transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
    background-color: #48AAAD;
    }

    .styled-button {
    background-color: #ffffff;
    color: #022D36;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 15px;
    text-decoration: none;
    }

    .styled-button span.arrow {
    margin-left: 10px;
    }

    .center-number {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 30%;
    margin: 0;
    }

    h2 {
    color: #D4D4D4;
    }
</style>

<br />

<h2>
    <div style="display: flex; align-items: center;">
        <div style="display: flex; flex-direction: column; align-items: flex-start; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
            <h2 style="margin: 0;">Good day @ViewBag.LoggedInUser !</h2>
        </div>
    </div>
</h2>
<br />

<div class="container">


    @if (ViewBag.Specialization == Specialization.Radiologist)
    {
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card officials-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <i class="fas fa-calendar-check me-2"></i>Appointments
                        </h5>
                        <p class="card-text">Appointments are listed here</p>
                        <h1 class="card-text text-center center-number">@ViewBag.OfficialsCount</h1>
                        <a asp-controller="Appointments" asp-action="X_RayAppointments" class="btn btn-primary mt-auto align-self-end styled-button">
                            <i class="fas fa-calendar-alt me-2"></i>
                            <span>Appointments</span>
                            <span class="arrow ms-2">&#10148;</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card club-administrators-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <i class="fas fa-notes-medical me-2"></i>Completed X-Ray requests
                        </h5>
                        <p class="card-text">Completed x-ray scanner requests are listed here</p>
                        <h1 class="card-text text-center center-number">@ViewBag.ClubAdminsCount</h1>
                        <a asp-controller="Appointments" asp-action="CompletedX_RayAppointments" class="btn btn-primary mt-auto align-self-end styled-button">
                            <i class="fas fa-file-medical-alt me-2"></i>
                            <span>Requests</span>
                            <span class="arrow ms-2">&#10148;</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>


    }
    else
    {
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card officials-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-calendar-check"></i> Appointments</h5>
                        <p class="card-text">Appointments are listed here</p>
                        <h1 class="card-text text-center center-number">@ViewBag.OfficialsCount</h1>

                        @if (ViewBag.Specialization == Specialization.Radiologist)
                        {
                            <a asp-controller="Appointments" asp-action="X_RayAppointments" class="btn btn-primary mt-auto align-self-end styled-button">
                                <span>Appointments</span>
                                <span class="arrow">&#10148;</span>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Appointments" asp-action="Appointments" class="btn btn-primary mt-auto align-self-end styled-button">
                                <span>Appointments</span>
                                <span class="arrow">&#10148;</span>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-6">
                <div class="card sport-coordinators-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-bone me-2"></i> X-Ray Requests</h5>
                        <p class="card-text">X-Ray requests are listed here</p>
                        <h1 class="card-text text-center center-number">@ViewBag.SportCoordinatorsCount</h1>
                        <a asp-controller="Appointments" asp-action="MyXRayRequests" class="btn btn-primary mt-auto align-self-end styled-button">
                            <span>Requests</span>
                            <span class="arrow">&#10148;</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6">
                <div class="card sport-coordinators-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-sign-in-alt"></i> Admissions</h5>
                        <p class="card-text">Your admissions are listed here</p>
                        <h1 class="card-text text-center center-number">@ViewBag.SportCoordinatorsCount</h1>
                        <a asp-controller="Admissions" asp-action="MyPatientAdmissions" class="btn btn-primary mt-auto align-self-end styled-button">
                            <span>Admissions</span>
                            <span class="arrow">&#10148;</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="card club-administrators-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-notes-medical"></i> Medical history</h5>
                        <p class="card-text">Patients medical histories are listed here</p>
                        <h1 class="card-text text-center center-number">@ViewBag.ClubAdminsCount</h1>
                        <a asp-controller="MedicalHistories" asp-action="PatientsMedicalHistory" class="btn btn-primary mt-auto align-self-end styled-button">
                            <span>Medical history</span>
                            <span class="arrow">&#10148;</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


