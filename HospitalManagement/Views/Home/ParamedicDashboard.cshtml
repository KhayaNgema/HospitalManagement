@{
    ViewData["Title"] = "System Administrator";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #022D36;
        font-size: 20px; 
    }

    .card-text {
        color: #022D36;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #022D36;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #48AAAD;
        }

    .styled-button {
        background-color: #ffffff;
        color: #022D36;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />

    <h2>
        <div style="display: flex; align-items: center;">
            <div style="display: flex; flex-direction: column; align-items: flex-start; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                <h2 style="margin: 0;">Good day @ViewBag.LoggedInUser !</h2>
            </div>
        </div>
    </h2>
    <br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card sport-administrators-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-check"></i> Appointments</h5>
                    <p class="card-text">Patients appointments are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportAdminsCount</h1>
                    <a asp-controller="Users" asp-action="SportAdministrators" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Appointments</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-6">
            <div class="card sport-coordinators-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-sign-in-alt"></i> Admissions</h5>
                    <p class="card-text">Patients admissions are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportCoordinatorsCount</h1>
                    <a asp-controller="Users" asp-action="SportCoordinators" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Admissions</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card officials-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-shopping-cart"></i> Orders</h5>
                    <p class="card-text">Patients meals orders are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.OfficialsCount</h1>
                    <a asp-controller="Users" asp-action="Officials" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Orders</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-administrators-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-file-invoice-dollar"></i> Patient Bills</h5>
                    <p class="card-text">All patients bills are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClubAdminsCount</h1>
                    <a asp-controller="Users" asp-action="ClubAdministrators" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Patient Bills</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-managers-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-user-injured"></i> Patients</h5>
                    <p class="card-text">Our registered patients are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClubManagersCount</h1>
                    <a asp-controller="Users" asp-action="ClubManagers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Patients</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card division-players-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-user-md"></i> Doctors</h5>
                    <p class="card-text">Our medical staff members are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.DivisionPlayersCount</h1>
                    <a asp-controller="Users" asp-action="DivisionPlayers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Doctors</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card news-administrators-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-utensils"></i> Kitchen Staff</h5>
                    <p class="card-text">Our kitchen staff members are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.NewsAdminsCount</h1>
                    <a asp-controller="Users" asp-action="NewsAdministrators" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Kitchen Staff</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card news-updaters-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-user-shield"></i> Admins</h5>
                    <p class="card-text">Our system administrators are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.NewsUpdatersCount</h1>
                    <a asp-controller="Users" asp-action="NewsUpdaters" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Admins</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


