@{
    ViewData["Title"] = "Medication Inventory & Usage";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .chart-container {
        border: 2px solid #48AAAD;
        border-radius: 10px;
        background-color: #ffffff;
        padding: 15px;
        margin-bottom: 20px;
        height: 340px;
        width: 100%;
    }
    .dashboard-title {
        font-weight: bold;
        margin-bottom: 10px;
        color: #022D36;
    }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between py-3 mb-4" style="background-color:#48AAAD;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white d-inline-flex align-items-center back-link me-3" style="text-decoration:none;">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white"><strong>Medication Inventory & Usage Reports</strong></h2>
        </div>
    </div>

    <div class="chart-container">
        <div class="dashboard-title">Medication Inventory vs Usage</div>
        <canvas id="inventoryUsageChart" style="height: 240px !important; width: 100% !important;"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('inventoryUsageChart').getContext('2d');

        const data = {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.MedicationNames)),
            datasets: [
                {
                    label: 'Inventory Quantity',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.InventoryQuantities)),
                    backgroundColor: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.StockLevelColors)),
                    borderColor: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.StockLevelColors)),
                    borderWidth: 1
                },
                {
                    label: 'Usage Quantity',
                    data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.UsageQuantities)),
                    backgroundColor: '#FF6F61',  // Distinct coral/red for usage bars
                    borderColor: '#FF6F61',
                    borderWidth: 1
                }
            ]
        };

        const options = {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Quantity'
                    }
                },
                x: {
                    ticks: {
                        maxRotation: 45,
                        minRotation: 45,
                        autoSkip: false
                    }
                }
            },
            interaction: {
                mode: 'index',
                intersect: false
            },
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        color: '#022D36',
                        font: {
                            size: 14
                        }
                    }
                },
                tooltip: {
                    enabled: true,
                    mode: 'nearest',
                    intersect: false,
                }
            }
        };

        const config = {
            type: 'bar',
            data: data,
            options: options
        };

        new Chart(ctx, config);
    </script>
}
