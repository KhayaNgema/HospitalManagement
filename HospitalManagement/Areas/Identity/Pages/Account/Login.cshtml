@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}

<head>
    <style>
        .btn-login {
            background-color: #48AAAD;
            color: white;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.7rem;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #369a9a;
                box-shadow: 0 4px 15px rgba(72, 170, 173, 0.4);
            }
    </style>
</head>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="login-card shadow">
                <h1 class="app-name text-center"><span style="color: #022D36;">Medi</span><span style="color: #48AAAD;">Connect</span></h1>
                <h3 class="login-header">Login</h3>
                <form id="account" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Input.Email" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label fw-semibold"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="checkbox mb-4">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div class="d-grid mb-4">
                        <button type="submit" class="btn btn-login">
                            Login
                        </button>
                    </div>

                    <div class="text-end small">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                    <div class="text-center small">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an account? Click here to create a new account</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
